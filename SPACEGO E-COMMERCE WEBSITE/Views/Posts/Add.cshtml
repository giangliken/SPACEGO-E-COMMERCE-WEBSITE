@model IEnumerable<SPACEGO_E_COMMERCE_WEBSITE.Models.Post>
<!-- Index.cshtml -->
@{
    ViewData["Title"] = "Danh sách bài viết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo bài viết mới</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Ngày đăng</th>
            <th>Người đăng</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@post.User?.FullName</td>
                <td>@(post.IsPublished ? "Hiện" : "Ẩn")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@post.PostId">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@post.PostId">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@post.PostId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>