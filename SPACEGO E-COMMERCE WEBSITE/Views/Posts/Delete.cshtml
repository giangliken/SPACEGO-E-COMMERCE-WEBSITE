@model SPACEGO_E_COMMERCE_WEBSITE.Models.Post

<div class="container py-5">
    <div class="card border-danger shadow-sm rounded-3">
        <div class="card-body">
            <h3 class="text-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i> Bạn có chắc muốn xóa bài viết này không?
            </h3>

            <div class="mb-3">
                <h5 class="fw-bold">@Model.Title</h5>
                <p class="text-muted" style="white-space: pre-line;">@Model.Content</p>
            </div>

            <form asp-action="Delete" method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="PostId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i> Hủy
                </a>
            </form>
        </div>
    </div>
</div>
