@model SPACEGO_E_COMMERCE_WEBSITE.Models.Post
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

@{
    ViewData["Title"] = "Chi tiết bài viết";
    var isAdmin = User.IsInRole("Admin");
    Layout = isAdmin ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="border rounded shadow-sm p-4 bg-white">
        <h2 class="text-primary mb-3"><i class="fas fa-file-alt"></i> @Model.Title</h2>

        <p class="text-muted mb-2">
            <i class="fas fa-calendar-alt me-1"></i> Ngày đăng: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")

            @if (Model.UpdatedAt.HasValue)
            {
                <span class="ms-3"><i class="fas fa-edit me-1"></i> Cập nhật: @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
            }

            @if (Model.User != null)
            {
                <span class="ms-3"><i class="fas fa-user me-1"></i> Người đăng: @(Model.User.FullName ?? Model.User.UserName)</span>
            }
        </p>

        <hr />

        <div class="mb-4" style="white-space: pre-line; font-size: 1.1rem;">
            @Model.Content
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary mt-3">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>

            @if (isAdmin)
            {
                <div class="d-flex gap-2 mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.PostId" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa bài viết này không?');">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </a>
                </div>
            }
        </div>
    </div>
</div>
