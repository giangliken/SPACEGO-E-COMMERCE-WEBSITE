@model SPACEGO_E_COMMERCE_WEBSITE.Models.Post
@{
    ViewData["Title"] = "Sửa bài viết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border rounded-3">
                <div class="card-body">
                    <h2 class="card-title text-primary mb-4">
                        <i class="fas fa-edit me-2"></i> @ViewData["Title"]
                    </h2>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="PostId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">
                                <i class="fas fa-heading me-1"></i> Tiêu đề
                            </label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-semibold">
                                <i class="fas fa-align-left me-1"></i> Nội dung
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="IsPublished" class="form-check-input" />
                            <label asp-for="IsPublished" class="form-check-label">
                                <i class="fas fa-eye me-1"></i> Hiển thị
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Cập nhật
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
