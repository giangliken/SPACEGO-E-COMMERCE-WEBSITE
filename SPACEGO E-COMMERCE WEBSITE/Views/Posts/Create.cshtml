@model SPACEGO_E_COMMERCE_WEBSITE.Models.Post

@{
    ViewData["Title"] = "Tạo bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml"; // hoặc Layout Admin nếu bạn dùng
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border rounded-3">
                <div class="card-body">
                    <h2 class="card-title text-primary mb-4">
                        <i class="fas fa-pen-nib"></i> @ViewData["Title"]
                    </h2>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">
                                <i class="fas fa-heading me-1"></i> Tiêu đề
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-semibold">
                                <i class="fas fa-align-left me-1"></i> Nội dung
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="8" placeholder="Nhập nội dung chi tiết..."></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsPublished" class="form-check-input" />
                            <label asp-for="IsPublished" class="form-check-label">
                                <i class="fas fa-globe-asia me-1"></i> Công khai bài viết
                            </label>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-1"></i> Đăng bài
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
