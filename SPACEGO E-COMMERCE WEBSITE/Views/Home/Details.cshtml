@model SPACEGO_E_COMMERCE_WEBSITE.Models.ViewModel.ProductDetailViewModel

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- ẢNH SẢN PHẨM -->
            <div class="col-md-6">
                <div class="border rounded p-3 bg-white shadow-sm">
                    <img src="@Model.Product.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Product.ProductName" />

                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var img in Model.ProductImages)
                        {
                            <img src="@img.Url" class="img-thumbnail" style="width:100px; height:100px; object-fit:cover;" alt="Ảnh phụ" />
                        }
                    </div>
                </div>
            </div>

            <!-- THÔNG TIN SẢN PHẨM -->
            <div class="col-md-6">
                <div class="bg-light rounded p-4 shadow-sm h-100">
                    <h2 class="fw-bold text-primary">@Model.Product.ProductName</h2>
                    <p class="h4 text-danger mt-3">@Model.Product.ProductPrice.ToString("#,##0") <span class="text-muted">VND</span></p>
                    <hr />
                    <p>@Model.Product.ProductDescription</p>

                    <form asp-action="AddToCart" asp-controller="Home" method="post">
                        <input type="hidden" name="id" value="@Model.Product.ProductId" />
                        <button type="submit" class="btn btn-success btn-lg rounded-pill mt-3">
                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- ĐÁNH GIÁ -->
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="text-secondary border-bottom pb-2 mb-3">Đánh giá sản phẩm</h3>

                @if (Model.Reviews == null || Model.Reviews.Count == 0)
                {
                    <div class="alert alert-info">Chưa có đánh giá nào cho sản phẩm này.</div>
                }
                else
                {
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="border rounded-3 p-3 mb-3 bg-white shadow-sm">
                            <div class="d-flex justify-content-between">
                                <strong class="text-primary">@review.UserId</strong>
                                <span class="badge bg-warning text-dark">@review.Rating/5 <i class="fas fa-star"></i></span>
                            </div>
                            <p class="mt-2 mb-0">@review.Comment</p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
