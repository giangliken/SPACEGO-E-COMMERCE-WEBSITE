@model SPACEGO_E_COMMERCE_WEBSITE.Models.ViewModel.ProductDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<section class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.Product.ImageUrl" class="img-fluid" alt="@Model.Product.ProductName" />
                <div class="mt-3 d-flex gap-2">
                    @foreach (var img in Model.ProductImages)
                    {
                        <img src="@img.Url" class="img-thumbnail" style="width:100px;height:100px;" alt="Alternate image" />
                    }
                </div>
            </div>
            <div class="col-md-6">
                <h2>@Model.Product.ProductName</h2>
                <p class="h4 text-danger">@Model.Product.ProductPrice.ToString("#,##0") Vnđ</p>
                <p>@Model.Product.ProductDescription</p>

                <button class="btn btn-outline-dark">
                    <i class="bi-cart-fill me-1"></i> Add to Cart
                </button>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <h3>Reviews</h3>
                @if (Model.Reviews.Count == 0)
                {
                    <p>No reviews yet.</p>
                }
                else
                {
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="border rounded p-2 mb-2">
                            <strong>@review.UserId</strong> - @review.Rating/5
                            <p>@review.Comment</p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
