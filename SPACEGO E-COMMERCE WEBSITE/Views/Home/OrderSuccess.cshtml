@model SPACEGO_E_COMMERCE_WEBSITE.Models.Order
@using SPACEGO_E_COMMERCE_WEBSITE.Models
<h2 class="text-center text-black mb-4 bg-light py-3 rounded-top" style="border-bottom: 2px solid #007bff;">
    <a href="/Home/Cart" class="text-decoration-none text-black">Giỏ hàng</a>
    &gt;&gt; Thanh Toán &gt;&gt; <strong>Hoàn thành</strong>
</h2>


@if (TempData["Test"] != null)
{
    <div class="alert alert-danger">
        @TempData["Test"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top">
                    <h3 class="mb-0"><i class="fas fa-check-circle"></i> Đặt hàng thành công!</h3>
                </div>
                <div class="card-body text-center p-4">
                    <p class="fs-5 mb-4">Cảm ơn bạn đã mua sắm tại <strong>SPACEGO</strong> 🛒</p>

                    <p class="mb-2">
                        Mã đơn hàng của bạn là: <span class="fw-bold text-primary">@ViewBag.OrderCode</span>
                    </p>
                    <p class="mb-4">Chúng tôi sẽ xử lý đơn hàng của bạn và gửi thông báo khi hàng được giao đi.</p>

                    <a href="/Home/Index" class="btn btn-outline-primary me-2">
                        <i class="fas fa-home"></i> Về trang chủ
                    </a>
                    <a href="@Url.Action("Details", "Order", new { id = ViewBag.OrderCode })" class="btn btn-primary">
                        <i class="fas fa-receipt"></i> Xem đơn hàng của tôi
                    </a>


                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

}