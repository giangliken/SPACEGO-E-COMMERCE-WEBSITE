<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SPACEGO - ADMIN</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" href="~/assets/images/Logo/Icon_ko_phong.png" type="image/x-icon">
   

    <style>
        body {
            min-height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 250px;
            flex-shrink: 0;
            background-color: #343a40;
        }

            .sidebar .nav-link {
                color: #fff;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
        }

        .sidebar-heading {
            color: #adb5bd;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        footer {
            border-top: 1px solid #dee2e6;
            padding: 10px;
            text-align: center;
        }

        .nav-link {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            display: flex;
            align-items: center;
            transition: background-color 0.2s;
        }

            .nav-link i {
                width: 20px;
                text-align: center;
            }

            .nav-link.active {
                background-color: #0d6efd !important;
                color: #fff !important;
                font-weight: 500;
            }

            .nav-link:hover {
                background-color: #495057;
            }
    </style>

    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column p-3 text-bg-dark" style="width: 280px;">
            <a href="/Admin" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fas fa-shop me-2 fs-4"></i>
                <span class="fs-4">SPACEGO SHOP</span>
            </a>
            <hr>

            <ul class="nav nav-pills flex-column mb-auto">
                <li>
                    <a href="/Admin/index" class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/index") ? "active text-white bg-primary" : "text-white")">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="/Brand/index" class="nav-link @(Context.Request.Path.StartsWithSegments("/Brand") ? "active text-white bg-primary" : "text-white")">
                        <i class="fa-solid fa-boxes-packing me-2"></i>Nhãn hàng
                    </a>
                </li>
                <li>
                    <a href="/Product/index" class="nav-link @(Context.Request.Path.StartsWithSegments("/Product") ? "active text-white bg-primary" : "text-white")">
                        <i class="fa-solid fa-cube me-2"></i>Sản phẩm
                    </a>
                </li>
                <li>
                    <a href="/Warehouse/index" class="nav-link @(Context.Request.Path.StartsWithSegments("/Warehouse") ? "active text-white bg-primary" : "text-white")">
                        <i class="fa-solid fa-warehouse me-2"></i>Kho hàng
                    </a>
                </li>
                <li>
                    <a href="/Report/index" class="nav-link @(Context.Request.Path.StartsWithSegments("/Report") ? "active text-white bg-primary" : "text-white")">
                        <i class="fa-solid fa-chart-pie me-2"></i>Thống kê
                    </a>
                </li>
                <li>
                    <a href="/Category/index" class="nav-link @(Context.Request.Path.StartsWithSegments("/Category") ? "active text-white bg-primary" : "text-white")">
                        <i class="fa-solid fa-layer-group me-2"></i>Danh mục
                    </a>
                </li>
                <li>
                    <a href="/Admin/Order" class="nav-link @(Context.Request.Path.StartsWithSegments("/Admin/Order") ? "active text-white bg-primary" : "text-white")">
                        <i class="fas fa-table me-2"></i> Đơn hàng
                    </a>
                </li>
                <li>
                    <a href="/User/Index" class="nav-link @(Context.Request.Path.StartsWithSegments("/User/Index") ? "active text-white bg-primary" : "text-white")">
                        <i class="fas fa-user-circle me-2"></i> Người dùng
                    </a>
                </li>
               
            </ul>

        </div>

        <!-- Main Content -->
        <main class="content flex-grow-1 d-flex flex-column">
            <!-- Topbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light px-3 mb-3 border-bottom shadow-sm">
                <div class="container-fluid justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </nav>


            

            <!-- Page Content -->
            <div class="container-fluid flex-grow-1">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="bg-light text-center py-3 border-top mt-auto">
                <div class="container">
                    <span>&copy; 2025 SPACEGO SHOP</span>
                </div>
            </footer>
        </main>
    </div>

    <!-- Bootstrap JS + Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>


</html>
