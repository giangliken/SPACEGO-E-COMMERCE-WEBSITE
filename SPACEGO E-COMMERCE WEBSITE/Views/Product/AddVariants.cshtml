@model SPACEGO_E_COMMERCE_WEBSITE.Models.ProductVariant

@{
    ViewData["Title"] = "Thêm biến thể";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2 class="text-primary text-center mt-4">Thêm biến thể cho sản phẩm: @ViewBag.ProductName</h2>

    <div class="card shadow mt-4 rounded-4">
        <div class="card-body p-4">
            @if (ViewBag.Variants != null && ((IEnumerable<SPACEGO_E_COMMERCE_WEBSITE.Models.ProductVariant>)ViewBag.Variants).Any())
            {
                <h4 class="mt-4 mb-2 text-primary">Danh sách biến thể đã có</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Màu sắc</th>
                            <th>Dung lượng</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                            foreach (var v in (IEnumerable<SPACEGO_E_COMMERCE_WEBSITE.Models.ProductVariant>)ViewBag.Variants)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td>@v.Color?.ColorName</td>
                                    <td>@v.Capacity?.CapacityName</td>
                                    <td>@v.Price.ToString("N0")</td>
                                    <td>@v.Quantity</td>
                                </tr>
                                stt++;
                            }
                        }
                    </tbody>
                </table>
            }
            <form asp-action="AddVariantConfirmed" method="post">
                <input type="hidden" asp-for="ProductId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ColorId" class="form-label fw-semibold">Màu sắc</label>
                        <select asp-for="ColorId" asp-items="ViewBag.Colors" class="form-select">
                            <option value="">Chọn màu sắc</option>
                        </select>
                        <span asp-validation-for="ColorId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CapacityId" class="form-label fw-semibold">Dung lượng</label>
                        <select asp-for="CapacityId" asp-items="ViewBag.Capacities" class="form-select">
                            <option value="">Chọn dung lượng</option>
                        </select>
                        <span asp-validation-for="CapacityId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-semibold">Giá</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Quantity" class="form-label fw-semibold">Số lượng</label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Trở về danh sách
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle"></i> Thêm biến thể
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
