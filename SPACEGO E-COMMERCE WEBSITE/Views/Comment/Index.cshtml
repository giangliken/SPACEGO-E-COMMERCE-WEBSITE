@model IEnumerable<SPACEGO_E_COMMERCE_WEBSITE.Models.Comment>

@{
    ViewData["Title"] = "Quản lý bình luận";
}

<h2 class="mb-4">Quản lý bình luận</h2>
<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-primary me-2">Tất cả bình luận</a>
    <a asp-action="Pending" class="btn btn-outline-warning">Bình luận chờ duyệt</a>
</div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Ngày viết bình luận</th>
            <th>Người dùng</th>
            <th>Mã sản phẩm</th>
            <th>Nội dung</th>
            <th>Xếp hạng</th>
            <th>Trạng thái</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Không có bình luận nào.</td>
            </tr>
        }
        else
        {
            foreach (var c in Model)
            {
                <tr>
                    <td>@c.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@c.User?.FullName (@c.User?.Email)</td>
                    <td>@c.ProductId</td>
                    <td>@c.Content</td>
                    <td>@c.Rating/5 ⭐</td>
                    <td>
                        @if (c.isActive)
                        {
                            <span class="badge bg-success">Đã duyệt</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Chờ duyệt</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Toggle" asp-route-id="@c.CommentId" class="btn btn-sm btn-outline-primary me-1">
                            @(c.isActive ? "Ẩn" : "Duyệt")
                        </a>
                        <a asp-action="Delete" asp-route-id="@c.CommentId" class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Bạn có chắc muốn xóa bình luận này không?');">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
