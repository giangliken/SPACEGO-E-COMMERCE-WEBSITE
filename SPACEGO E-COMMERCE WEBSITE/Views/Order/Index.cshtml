@model IEnumerable<SPACEGO_E_COMMERCE_WEBSITE.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4">
    <!-- Tiêu đề trang -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary mb-0">Quản lý đơn hàng</h2>
    </div>

    <!-- Form tìm kiếm -->
    <form asp-action="Index" method="get" class="row g-3 mb-4">
        <div class="col-md-4 col-sm-6">
            <input type="text"
                   name="searchString"
                   class="form-control"
                   placeholder="Tìm theo mã đơn hàng hoặc trạng thái..."
                   value="@Context.Request.Query["searchString"]" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search me-1"></i>Tìm
            </button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary">Xóa lọc</a>
        </div>
    </form>

    <!-- Bảng danh sách đơn hàng -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle mb-0">
                    <thead class="table-dark text-center">
                        <tr>
                            <th scope="col">Mã đơn hàng</th>
                            <th scope="col">Tổng tiền</th>
                            <th scope="col">Phí vận chuyển</th>
                            <th scope="col">Ngày đặt hàng</th>
                            <th scope="col">Phương thức thanh toán</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col">Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.Total.ToString("N0")₫</td>
                                    <td>@item.ShippingFee.ToString("N0")₫</td>
                                    <td>@(item.OrderDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                    <td>@item.PaymentMethod</td>
                                    <td>
                                        @{
                                            var statusClass = item.OrderStatus switch
                                            {
                                                "Đã giao" => "bg-success",
                                                "Đang xử lý" => "bg-warning text-dark",
                                                "Đã hủy" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@item.OrderStatus</span>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Details"
                                               asp-route-id="@item.OrderId"
                                               class="btn btn-sm btn-info"
                                               title="Chi tiết">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <form asp-action="Delete"
                                                  asp-route-id="@item.OrderId"
                                                  method="post"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Bạn có chắc muốn xóa đơn hàng này không?');">
                                                <button type="submit"
                                                        class="btn btn-sm btn-danger"
                                                        title="Xóa">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-muted py-3">Không có đơn hàng nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

