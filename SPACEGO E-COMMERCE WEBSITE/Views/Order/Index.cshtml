@model IEnumerable<SPACEGO_E_COMMERCE_WEBSITE.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h2>Danh sách đơn hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Mã đơn hàng
            </th>
            <th>
                Tổng tiền
            </th>
            <th>
                Phí vận chuyển
            </th>
            <th>
                Ngày đặt hàng
            </th>
            <th>
                Phương thức thanh toán
            </th>
            <th>
                Trạng thái đơn hàng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.OrderId">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
